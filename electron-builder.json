{
  "asar": false,
  "directories": {
    "output": "release/",
    "app": "src/main"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json"
  ],
  "extraResources": [
    {
      "from": "dist/main",
      "to": "app",
      "filter": [
        "**/*",
        "!*.map"
      ]
    },
    {
      "from": "dist/bridge",
      "to": "bridge",
      "filter": [
        "**/*",
        "!*.map"
      ]
    },
    {
      "from": "dist/renderer",
      "to": "renderer",
      "filter": [
        "**/*",
        "!*.map"
      ]
    },
    {
      "from": "pdftk",
      "to": "../pdftk",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "icon": "dist/renderer/assets/icons",
    "target": [ ]
  },
  "portable": {
  },
  "mac": {
    "icon": "dist/renderer/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/renderer/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
